@model AmpRageRepo.Models.Path

@{
    ViewData["Title"] = "CreatePath";
}

<h1>CreatePath</h1>

<h4>Path</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreatePath">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width:400px">
                <label asp-for="Origin" class="control-label"></label>
                <input asp-for="Origin" class="form-control rounded-pill" />
                <span asp-validation-for="Origin" class="text-danger"></span>
            </div>
            <div class="form-group" style="width:400px">
                <label asp-for="Destination" class="control-label"></label>
                <input asp-for="Destination" class="form-control rounded-pill" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group" id="brand" style="width:400px">
                <p class="control-label">Car brand:</p>
                <select asp-for="CarBrand" id="CarBrand" class="form-control rounded-pill" style="width:400px">
                    @foreach (var item in Model.AllCarBrands)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>

            <div class="form-group" id="make" style="width:400px">
                <p class="control-label">Car brand + Range:</p>
                <select asp-for="CarMake" id="CarMake" class="form-control rounded-pill" style="width:400px">
                    @foreach (var item in Model.AllCarModels)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="form-group" style="width:400px">
                <label asp-for="CurrentRangeM" class="control-label"></label>
                <input asp-for="CurrentRangeM" class="form-control rounded-pill" />
                <span asp-validation-for="CurrentRangeM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p class="control-label">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </p>
            </div>
        </form>
    </div>
</div>


@section scripts{

    <script src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyBhIgKBChJZ9HwlAS5FdKkMFKuneDc8RjY" type="text/javascript"></script>

    <script>

        google.maps.event.addDomListener(window, 'load', function () {
            new google.maps.places.SearchBox(document.getElementById('Origin'));
            new google.maps.places.SearchBox(document.getElementById('Destination'));
        });

    </script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

